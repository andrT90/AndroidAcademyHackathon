<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:visibility="visible"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/event_list_line_margin"
        app:layout_constraintStart_toEndOf="@+id/date"/>

    <View
        android:id="@+id/line_top"
        android:layout_width="1dp"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@color/white"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/event_list_line_margin"
        app:layout_constraintStart_toEndOf="@+id/date"/>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@color/white"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="@+id/line_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/event_list_line_margin"
        app:layout_constraintStart_toEndOf="@+id/date"/>


    <TextView
        android:id="@+id/date"
        style="@style/EventList.Date"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="02\nСЕН" />

    <TextView
        android:id="@+id/time"
        style="@style/EventList.Time"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="@+id/date"
        app:layout_constraintStart_toStartOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@id/date"
        tools:text="19:00" />

    <View
        android:id="@+id/circle"
        android:layout_width="@dimen/event_list_circle"
        android:layout_height="@dimen/event_list_circle"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/circle_green"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        style="@style/EventList.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toStartOf="@id/number"
        app:layout_constraintStart_toEndOf="@+id/circle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Architecture" />

    <TextView
        android:id="@+id/mentor"
        style="@style/EventList.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toStartOf="@id/number"
        app:layout_constraintStart_toEndOf="@+id/circle"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="Сергей Рябов" />

    <TextView
        android:id="@+id/location"
        style="@style/EventList.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toStartOf="@id/number"
        app:layout_constraintStart_toEndOf="@+id/circle"
        app:layout_constraintTop_toBottomOf="@id/mentor"
        android:drawablePadding="@dimen/dimen_8dp"
        android:drawableStart="@drawable/location_green"
        tools:text="Avito" />

    <TextView
        android:id="@+id/status"
        style="@style/EventList.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:drawablePadding="@dimen/dimen_8dp"
        android:drawableStart="@drawable/circle_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/number"
        app:layout_constraintStart_toEndOf="@+id/circle"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Зарегистрирован" />

    <TextView
        android:id="@+id/number"
        style="@style/EventList.Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#01" />


</android.support.constraint.ConstraintLayout>