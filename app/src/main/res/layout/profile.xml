<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_nav_view_height">

    <include layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:src="@drawable/user_mock"
                app:civ_border_color="@color/greenLight"
                />

            <TextView
                android:id="@+id/user"
                style="@style/Text.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center"
                android:text="Леха Чеботаря"
                android:textColor="@color/blackTransparent"
                android:textSize="@dimen/text_size_16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/greenLight"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_24dp"
                android:paddingTop="@dimen/dimen_24dp">

                <TextView
                    android:id="@+id/mentor"
                    style="@style/Text.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ментор"
                    android:textSize="@dimen/text_size_16sp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mentor_image"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:src="@drawable/mentor_mock"
                    app:civ_border_color="@color/black"
                    />

                <TextView
                    android:id="@+id/mentor_name"
                    style="@style/Text.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Алексей Быков"
                    android:textSize="@dimen/text_size_16sp"
                    />

                <TextView
                    android:id="@+id/slack"
                    style="@style/Text.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:background="@drawable/shape_button_outline_gray"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingRight="@dimen/dimen_16dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:text="\@ALEX.BIKOV"
                    android:textSize="@dimen/text_size_16sp"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp">

                <TextView
                    android:id="@+id/words"
                    style="@style/Text.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    tools:text="«Да пребудет\nс тобой сила»" />

                <ImageView
                    android:id="@+id/robot"
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/android_1" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:clipToPadding="false"
                    app:tabGravity="fill"
                    app:tabMode="scrollable" />
            </FrameLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>