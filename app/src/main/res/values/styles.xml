<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Toolbar-->
    <style name="Toolbar">
        <item name="navigationIcon">@drawable/arrow_back_black</item>
        <item name="titleTextAppearance">@style/TextAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar.WithoutBack">
        <item name="navigationIcon">@null</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    </style>


    <style name="Toolbar.Text">
        <item name="layout_width">match_parent</item>
        <item name="layout_height">match_parent</item>
        <item name="android:textColor">@color/blackTransparent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_48dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_48dp</item>
    </style>

    <!--Shadow-->
    <style name="Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_4dp</item>
        <item name="android:background">@drawable/shadow_background</item>
    </style>

    <!--Text-->
    <style name="Text" />

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


</resources>
